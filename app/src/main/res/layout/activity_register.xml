<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brian.mousecatelephant.RegisterActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userField"
        tools:layout_editor_absoluteY="188dp"
        tools:layout_editor_absoluteX="47dp"
        android:layout_marginTop="137dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/passField"
        android:layout_alignStart="@+id/passField" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/passField"
        tools:layout_editor_absoluteY="251dp"
        tools:layout_editor_absoluteX="47dp"
        android:layout_alignLeft="@+id/SubmitButton"
        android:layout_alignStart="@+id/SubmitButton"
        android:layout_below="@+id/userField" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:id="@+id/loginMessage"
        android:layout_above="@+id/passField"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="376dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="103dp" />
</RelativeLayout>
